datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================================
// USER & AUTHENTICATION
// ========================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String
  
  // Each user is their own tenant
  tenantId      String    @unique
  
  accounts      Account[]
  sessions      Session[]
  tenant        Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ========================================
// TENANT MANAGEMENT (1 user = 1 tenant)
// ========================================

model Tenant {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  users                      User[]
  categories                 Category[]
  transactions               Transaction[]
  uploads                    Upload[]
  userCorrections            UserCorrection[]
  googleSheetsConnections    GoogleSheetsConnection[]
  
  @@map("tenants")
}

// ========================================
// UK ACCOUNTING CATEGORIES
// ========================================

model Category {
  id          String   @id @default(cuid())
  tenantId    String
  name        String
  type        String   // 'income' or 'expense'
  description String?
  isDefault   Boolean  @default(false) // System-provided categories
  isActive    Boolean  @default(true)
  
  tenant       Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  corrections  UserCorrection[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([tenantId])
  @@index([tenantId, type])
  @@map("categories")
}

// ========================================
// FILE UPLOADS
// ========================================

model Upload {
  id                  String   @id @default(cuid())
  tenantId            String
  filename            String
  originalFilename    String
  cloudStoragePath    String   // S3 key
  fileSize            Int
  rowCount            Int?
  processedCount      Int      @default(0)
  status              String   @default("pending") // pending, processing, completed, failed
  errorMessage        String?  @db.Text
  
  tenant       Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([tenantId])
  @@index([tenantId, status])
  @@map("uploads")
}

// ========================================
// TRANSACTIONS
// ========================================

model Transaction {
  id                      String   @id @default(cuid())
  tenantId                String
  uploadId                String
  
  // Transaction details
  date                    DateTime
  description             String   @db.Text
  payerPayee              String?
  reference               String?
  paidIn                  Decimal? @db.Decimal(15, 2)
  paidOut                 Decimal? @db.Decimal(15, 2)
  amount                  Decimal  @db.Decimal(15, 2) // Signed amount (positive = income, negative = expense)
  currency                String   @default("GBP")
  
  // Categorization
  categoryId              String?
  confidence              Decimal? @db.Decimal(3, 2) // 0.00 to 1.00
  aiSuggestedCategoryId   String?
  aiReasoning             String?  @db.Text
  status                  String   @default("pending") // pending, categorized, reviewed, confirmed
  
  // Manual review flags
  needsReview             Boolean  @default(false)
  isReviewed              Boolean  @default(false)
  reviewedAt              DateTime?
  
  // Metadata from CSV
  originalCategory        String?
  originalSubCategory     String?
  transactionType         String?
  metadata                Json?    @db.JsonB
  
  tenant      Tenant           @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  upload      Upload           @relation(fields: [uploadId], references: [id], onDelete: Cascade)
  category    Category?        @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  corrections UserCorrection[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([tenantId])
  @@index([tenantId, date])
  @@index([tenantId, status])
  @@index([tenantId, categoryId])
  @@index([uploadId])
  @@map("transactions")
}

// ========================================
// LEARNING SYSTEM
// ========================================

model UserCorrection {
  id                    String   @id @default(cuid())
  tenantId              String
  transactionId         String
  
  originalCategoryId    String?
  correctedCategoryId   String
  reason                String?  @db.Text
  
  // Pattern learning
  transactionPattern    String?  // E.g., vendor name pattern
  amountPattern         String?  // E.g., amount range
  
  tenant            Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  transaction       Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  correctedCategory Category    @relation(fields: [correctedCategoryId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@index([tenantId])
  @@index([tenantId, correctedCategoryId])
  @@map("user_corrections")
}

// ========================================
// GOOGLE SHEETS INTEGRATION
// ========================================

model GoogleSheetsConnection {
  id                    String   @id @default(cuid())
  tenantId              String
  
  // OAuth tokens (store encrypted in production)
  accessToken           String   @db.Text
  refreshToken          String?  @db.Text
  expiresAt             DateTime?
  
  // User preferences
  defaultSpreadsheetId  String?
  autoSync              Boolean  @default(false)
  
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([tenantId])
  @@map("google_sheets_connections")
}
